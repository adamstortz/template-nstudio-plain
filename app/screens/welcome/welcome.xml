<Page 
    xmlns="http://www.nativescript.org/tns.xsd" 
    xmlns:Slides="nativescript-slides" loaded="onLoaded">
    <Page.actionBar>
        <ActionBar title="Welcome"></ActionBar>
    </Page.actionBar>
    <Slides:SlideContainer id="slides" pageIndicators="true" loop="false" start="{{ onSlideStart }}" finished="{{ onSlideFinished }}">
        <Slides:Slide>
            <Label text="Welcome"/>
            <Image src="~/assets/nstudio-1024.png" stretch="none" />
            <Label text="{{ 'App Version: ' +  APP_VERSION }}" textWrap="true" />
        </Slides:Slide>
        <Slides:Slide>
            <DockLayout stretchLastChild="true">
                <Label dock="top" text="Finished the slides to enjoy the app." textWrap="true" />
                <Button class="primary-btn" dock="bottom" text="Finish" tap="{{ onFinishTap }}" />
            </DockLayout>
        </Slides:Slide>
    </Slides:SlideContainer>
</Page>